<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="style.css">
    <title>Student Data Display</title>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Registered Students</h1>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Gender</th>
                        <th>Department</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% students.forEach(student => { %>
                    <tr>
                        <td><%= student.first_name %></td>
                        <td><%= student.last_name %></td>
                        <td><%= student.email %></td>
                        <td><%= student.gender %></td>
                        <td><%= student.department %></td>
                        <td>
                            <a href="/edit/<%= student._id %>" class="btn btn-warning btn-sm">Update</a>
                            <a href="/delete/<%= student._id %>" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <div class="text-center mt-4">
            <a href="/" class="btn btn-primary">Go Back to Registration Form</a>
        </div>
    </div>
    